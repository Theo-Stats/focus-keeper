{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Focus Keeper",
  "version": "0.1.0",
  "identifier": "com.focuskeeper.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Focus Keeper",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright © 2024",
    "publisher": "Focus Keeper",
    "shortDescription": "Focus Keeper - 专注时间管理工具",
    "longDescription": "Focus Keeper 是一款 Windows 桌面应用，帮助您保持专注，屏蔽干扰网站和应用。",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["SimpChinese", "English"]
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
